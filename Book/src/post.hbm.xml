<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC 
    "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">

<!-- default, id name="id" will be the entity of database's table name -->
<hibernate-mapping>
	<class name="in.cdac.Post" table="HBM_POST">
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>

		<property name="post" column="post" length="200" type="string" />
		<property name="likeCount" column="likeCount" type="int" />
		<property name="dislikeCount" column="dislikeCount" type="int" />
		<property name="userid" column="userid" type="int" />

	</class>
</hibernate-mapping>